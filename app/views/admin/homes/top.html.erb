<h3>注文履歴一覧</h3>
<table class="table table-hover table-inverse">
  <thead>
    <tr class="table-active font-weight-bold">
      <th>購入日時</th>
      <th>購入者</th>
      <th>注文個数</th>
      <th>注文ステータス</th>
    </tr>
  </thead>
  <tbody>
    <% @orders.each do |order| %>
      <tr>
        <td><%= link_to order.created_at.strftime("%Y/%m/%d %H:%M:%S"), admin_order_path(order) %></td>
        <td>
          <%= link_to order.address, search_admin_products_path(customer_id: customer.id, search_method: "customer") %>
        </td>
        <td><%= order.order_details.count %></td>
        <td><%= order.order_status_i18n %></td>
      </tr>
    <% end %>
    <%= paginate @orders %>
  </tbody>
</table>