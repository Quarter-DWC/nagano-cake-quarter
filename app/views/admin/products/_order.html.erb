<table class='table table-hover table-inverse'>
  <thead>
    <tr class="table-active">
      <th>注文ID</th>
      <th>請求金額</th>
      <th>支払方法</th>
      <th>注文ステータス</th>
    </tr>
  </thead>
  <tbody>
    <% products.each do |product| %>
      <tr>
        <td><%= link_to product.id, admin_order_path(product) %></td>
        <td><%= product.total_price %></td>
        <td>&yen<%= product.payment_method_i18n %></td>
        <td><%= product.order_status_i18n %></td>
      </tr>
    <% end %>
    <%= paginate products %>
  </tbody>
</table>