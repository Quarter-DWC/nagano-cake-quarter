<table class='table table-hover table-inverse'>
  <thead>
    <tr class="table-active">
      <th>購入日時</th>
      <th>宛名</th>
      <th>請求金額</th>
      <th>注文ステータス</th>
    </tr>
  </thead>
  <tbody>
    <% products.each do |product| %>
      <tr>
        <td><%= link_to product.created_at.strftime("%Y/%m/%d %H:%M:%S"), admin_order_path(product) %></td>
        <td><%= product.address_name %></td>
        <td>&yen<%= product.total_price.to_s(:delimited) %></td>
        <td><%= product.order_status_i18n %></td>
      </tr>
    <% end %>
    <%= paginate products %>
  </tbody>
</table>