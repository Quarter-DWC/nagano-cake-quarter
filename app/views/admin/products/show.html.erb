<h3>商品詳細</h3>
<div class="row">
  <div class="col-md-3">
    <%= attachment_image_tag(@product, :image, :fill, 100, 100, fallback: "no_image.jpg") %>
  </div>
  <div class="col-md-8 offset-md-1">
    <table class="table table-borderless">
      <tr>
        <th>商品名</th>
        <td><%= @product.name %></td>
      </tr>
      <tr>
        <th>商品説明</th>
        <td><%= @product.introduction %></td>
      </tr>
      <tr>
        <th>ジャンル</th>
        <td><%= @product.genre.name %></td>
      </tr>
      <tr>
        <th>税込価格（税抜価格）</th>
        <td>&yen<%= @product.tax_included_price.to_s(:delimited) %> (&yen<%= @product.price.to_s(:delimited) %>)</td>
      </tr>
      <tr>
        <th>販売ステータス</th>
        <td class="<%= @product.sale_status %>"><%= @product.sale_status_i18n %></td>
      </tr>
    </table>
    <%= link_to "編集する", edit_admin_product_path, class:"btn btn-success" %>
  </div>
</div>