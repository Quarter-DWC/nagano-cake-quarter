<div class="row">
  <div class="col-md-3">
    <%= render 'customer/homes/genre_search', genres: @genres %>
  </div>
  <div class="col-md-8 offset-md-1">
    <div class="product_header">
      <% if @method == 'keyword' %>
        <h3 class="title">Product</h3>
        <p class="sub-title">商品一覧</p>
        <p class="products_count">(全<%= @total_products %>件)</p>
        <%= render 'list', products: @result %>
      <% elsif @method == 'genre' %>
        <h3 class="title"><%= @genre_name %>一覧</h3>
        <p class="products_count">(全<%= @total_products %>件)</p>
        <%= render 'list', products: @result %>
      <% end %>
    </div>
  </div>
</div>