<h3>会員一覧</h3>
<table class="table table-hover table-inverse">
  <thead>
    <tr class="table-active">
      <th>会員ID</th>
      <th>氏名</th>
      <th>メールアドレス</th>
      <th>ステータス</th>
    </tr>
  </thead>
  <tbody>
    <% @customers.each do |customer| %>
      <tr>
        <td><%= customer.id %></td>
        <td>
          <%= link_to customer.full_name, admin_customer_path(customer) %>
        </td>
        <td><%= customer.email %></td>
        <td>
          <% if customer.is_valid %>
            <p class="customer_valid">有効</p>
          <% else %>
            <p class="customer_invalid">退会</p>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= paginate @customers %>