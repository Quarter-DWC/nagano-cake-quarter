<h3>注文確認画面</h3>

<div class="order_table row">
  <table class="table table-bordered col-md-6">
    <thead>
      <tr>
        <th>商品</th>
        <th>単価（税込）</th>
        <th>個数</th>
        <th>小計</th>
    </thead>
    <tbody>
      <% @cart_products.each do |cart| %>
        <tr>
          <td>
            <%= attachment_image_tag cart.product, :image, :fill, 100, 100, fallback: "no_image.jpg" %>
            <%= cart.product.name %>
          </td>
          <td>&yen<%= cart.product.tax_included_price.to_s(:delimited) %></td>
          <td><%= cart.quantity %></td>
          <td>&yen<%= cart.subtotal_price.to_s(:delimited) %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <table class="table table-bordered offset-1 col-md-3">
    <tbody>
      <tr>
        <td>送料</td>
        <td>&yen<%= @order.fee %></td>
      </tr>
      <tr>
        <td>商品合計</td>
        <td>&yen<%= @cart_products.total_price.to_s(:delimited) %></td>
      </tr>
      <tr>
        <td>請求金額</td>
        <td>&yen<%= (@order.fee + @cart_products.total_price).to_s(:delimited) %></td>
      </tr>
    </tbody>
  </table>

</div>

<h4>支払い方法</h4>
<%= @order.payment_method_i18n %>

<h4>お届け先</h4>
<%= @order.full_address %><br />
<%= @order.address_name %>

<div class="hidden_group">
  <%= form_with model:@order, url: orders_path, local:true do |f| %>
    <%= f.hidden_field :payment_method, value: @order.payment_method %>
    <%= f.hidden_field :total_price, value: @order.fee + @cart_products.total_price %>
    <%= f.hidden_field :postal_code, value: @order.postal_code %>
    <%= f.hidden_field :address, value: @order.address %>
    <%= f.hidden_field :address_name, value: @order.address_name %>
    <%= f.submit "注文を確定する" ,class:"btn btn-success" %>
  <% end %>
</div>