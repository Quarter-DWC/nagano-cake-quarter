<header class="header">
  <div class="header__inner">
    <h1 class="site_logo">
      <a href="/" class="site_link">
        <img src="/assets/site-logo.png" alt="ながのCAKE">
      </a>
    </h1>    
    <p class="login_customer">ようこそ、<%= current_customer.last_name %><%= current_customer.first_name %>さん!</p>
    <nav class="header__nav">
      <ul class="header__ul">
        <li class="header__li">
          <%= link_to mypage_customers_path, class: "header__link" do %>
            <img src="/assets/user-mypage.svg" alt="マイページ" class="header__icon">
            <br>
            マイページ
          <% end %>
        </li>
        <li class="header__li">
          <%= link_to products_path, class: "header__link" do %>
            <img src="/assets/icon-products.svg" alt="商品一覧" class="header__icon">
            <br>
            商品一覧
          <% end %>
        </li>
        <li class="header__li">
          <%= link_to cart_products_path, class: "header__link" do %>
            <img src="/assets/user-cart.svg" alt="カート" class="header__icon">
            <br>
            カート
          <% end %>
        </li>
        <li class="header__li">
          <%= link_to destroy_customer_session_path, method: :delete, class: "header__link" do %>
            <img src="/assets/user-key.svg" alt="ログアウト" class="header__icon">
            <br>
            ログアウト
          <% end %>
        </li>
      </ul>
      <div class="search_area">
        <%= render 'layouts/search_form', content: @content %>
      </div>
    </nav>
  </div>
</header>