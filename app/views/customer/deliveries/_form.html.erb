<%= form_with model: delivery, local:true do |f| %>
  <%= render "customer/shared/error_messages", resource: f.object %>
  <div class="form-group">
    <%= f.label :postal_code, "郵便番号(ハイフンなし)" %>
    <%= f.text_field :postal_code, autofocus: true, autocomplete: "postal-code", placeholder: "0000000", class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :address, "住所" %>
    <%= f.text_field :address, autocomplete: "street-address", placeholder: "東京都渋谷区代々木神園町0-0", class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :name, "宛名" %>
    <%= f.text_field :address_name, autocomplete: "name", placeholder: "令和道子", class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.submit delivery.persisted? ? "変更内容を保存" : "新規登録", class: "delivery_btn form_btn" %>
  </div>
<% end %>