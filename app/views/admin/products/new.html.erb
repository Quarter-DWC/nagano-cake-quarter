<!--確認用　後で消します -->
<style>
.product_label {
    display: inline-block;
    width: 200px;
    /* border: solid 1px; */
}
.product_field {
    display: inline-block;
    width: 100px;
    /* border: solid 1px; */
}
</style>

<h2>商品新規登録</h2>

<%= form_with model:[:admin, @product], local:true do |f| %>

  <div class="form-group">
    <span class="product_label"><%= f.label :image, "商品画像" %></span>
    <span class="product_field"><%= f.attachment_field :image, class: "form-control-file" %></span>
  </div>

  <div class="form-group">
    <span class="product_label"><%= f.label :name, "商品名" %></span>
    <span class="product_field"><%= f.text_field :name, placeholder: "商品名", class: 'form-control' %></span>
  </div>
  <div class="form-group">
    <span class="product_label"><%= f.label :introduction, "商品説明" %></span>
    <span class="product_field"><%= f.text_area :introduction, placeholder: "ここに説明文を記述します", class: 'form-control' %></span>
  </div>
  <div class="form-group">
    <span class="product_label"><%= f.label :genre_id, "ジャンル" %></span>
    <span class="product_field"><%= f.collection_select(:genre_id, @genres, :id, :name ) %></span>
  </div>
  <div class="form-group">
    <span class="product_label"><%= f.label :price, "税込価格" %></span>
    <span class="product_field"><%= f.text_field :price, placeholder: 1000, class: 'form-control' %>円</span>
  </div>
  <div class="form-group">
    <span class="product_label"><%= f.label :sale_status, "販売ステータス" %></span>
    <span class="product_field"><%= f.radio_button :sale_status, 0 %>販売中</span>
    <span class="product_field"><%= f.radio_button :sale_status, 1 %>売切れ</span>
  </div>

  <div class="form-group">
    <%= f.submit "新規登録", class: 'btn btn-success' %>
  </div>
<% end %>