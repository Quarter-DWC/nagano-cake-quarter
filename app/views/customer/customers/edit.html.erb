<h3>会員情報編集</h3>

<div class="form_wrapper">
  <!--デバイスのパスが呼ばれてしまう。-->
  <%= form_with model: current_customer, url: customers_path, local: true do |f|%>

    <div class="form-group">
      <%= f.label :"名前" %>
      <%= f.label :last_name, "(姓)" %>
      <%= f.text_field :last_name, autofocus: true, autocomplete: "family-name", placeholder: "令和" %>
      <%= f.label :first_name, "(名)" %>
      <%= f.text_field :first_name, autocomplete: "given-name", placeholder: "道子" %>
    </div>

    <div class="form-group">
      <%= f.label :"フリガナ" %>
      <%= f.label :kana_last_name, "(セイ)" %>
      <%= f.text_field :kana_last_name, autocomplete: "family-name", placeholder: "レイワ" %>
      <%= f.label :kana_first_name, "(メイ)" %>
      <%= f.text_field :kana_first_name, autocomplete: "given-name", placeholder: "ミチコ" %>
    </div>

    <div class="form-group">
      <%= f.label :postal_code, "郵便番号(ハイフンなし)" %>
      <%= f.text_field :postal_code, autocomplete: "postal_code", placeholder: "0000000" %>
    </div>

    <div class="form-group">
      <%= f.label :address, "住所" %>
      <%= f.text_field :address, autocomplete: "street-address", placeholder: "東京都渋谷区代々木神園町0-0" %>
    </div>

      <div class="form-group">
      <%= f.label :phone_number, "電話番号(ハイフンなし)" %>
      <%= f.text_field :phone_number, autocomplete: "tel", placeholder: "0000000000" %>
    </div>

    <div class="form-group">
      <%= f.label :email, "メールアドレス" %>
      <%= f.email_field :email, autocomplete: "email", placeholder: "sample@example.com" %>
    </div>

    <div class="form-group">
      <%= f.submit "編集内容を保存", class:"btn btn-success" %>
      <%= link_to "退会する", unsubscribe_customers_path, class:"btn btn-danger" %>
    </div>
  <% end %>
</div>
