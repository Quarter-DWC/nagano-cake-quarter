<h3><%= @customer.last_name + @customer.first_name %>さんの会員情報編集</h3>
<%= form_with model: @customer, url: {controller: 'admin/customers', action: 'update' }, method: :patch, local: true do |f| %>

  <div class="form-group pt-3 text-center row">
    <%= f.label :id, '会員ID', class: 'col-md-3 col-form-label' %>
    <%= f.text_field :id, class: "form-control-plaintext w-25" %>
  </div>

  <div class="form-group pt-3 text-center row">
    <%= f.label "氏名", class: 'col-md-3 col-form-label' %>
    <%= f.text_field :last_name, autofocus: true, class: "form-control mr-1 w-25" %>
    <%= f.text_field :first_name, class: "form-control w-25" %>
  </div>

  <div class="form-group pt-3 text-center row">
    <%= f.label "フリガナ", class: 'col-md-3 col-form-label' %>
    <%= f.text_field :kana_last_name, class: "form-control mr-1 w-25" %>
    <%= f.text_field :kana_first_name, class: "form-control w-25" %>
  </div>

  <div class="form-group pt-3 text-center row">
    <%= f.label :postal_code, "郵便番号", class: 'col-md-3 col-form-label' %>
    <%= f.text_field :postal_code, class: "form-control w-25" %>
  </div>

  <div class="form-group pt-3 text-center row">
    <%= f.label :address, "住所", class: 'col-md-3 col-form-label' %>
    <%= f.text_field :address, class: "form-control w-25" %>
  </div>

  <div class="form-group pt-3 text-center row">
    <%= f.label :phone_number, "電話番号", class: 'col-md-3 col-form-label' %>
    <%= f.text_field :phone_number, class: "form-control w-25" %>
  </div>

  <div class="form-group pt-3 text-center row">
    <%= f.label :email, "メールアドレス", class: 'col-md-3 col-form-label' %>
    <%= f.email_field :email, autocomplete: "email", class: "form-control w-25" %>
  </div>

  <div class="form-group pt-3 text-center row">
    <%= f.label :is_valid, '会員ステータス', class: 'col-md-3 col-form-label' %>
    <div class="form-check">
      <%= f.radio_button :is_valid, true, class: "form-check-input" %>
      <%= f.label :is_valid, "有効", value: :true, class: "form-check-label" %>
    </div>
    <div class="form-check">
      <%= f.radio_button :is_valid, false, class: "form-check-input" %>
      <%= f.label :is_valid, "退会", value: :false, class: "form-check-label"%>
    </div>
  </div>
  <div class="text-center pt-3">
    <%= f.submit "変更を保存する", class: 'btn btn-success' %>
  </div>
<% end %>
