<%= form_with model:[:admin, genre], local:true do |f| %>

  <div class="bg-light text-danger"><%= render "admin/shared/error_messages", resource: f.object %></div>

  <div class="form-group row">
    <%= f.text_field :name, placeholder: "ジャンル名", class: 'col-md-2 form-control w-25 mx-3' %>
    <%= f.submit genre.persisted? ? "変更内容を保存" : "新規登録", class: 'btn btn-success' %>
  </div>

<% end %>