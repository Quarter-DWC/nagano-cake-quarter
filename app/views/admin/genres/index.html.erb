<h3>ジャンル一覧・追加</h3>
<%= render 'form', genre: @genre %>
<% unless @genres.blank? %>
  <table class='table table-hover table-inverse'>
    <thead>
      <tr class="table-active">
        <th>ジャンル</th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      <% @genres.each do |genre| %>
        <tr>
          <td><%= genre.name %></td>
          <td><%= link_to "編集する", edit_admin_genre_path(genre.id), class:"btn btn-success" %></td>
        </tr>
      <% end %>
      <%= paginate @genres %>
    </tbody>
  </table>
<% else %>
  <p>該当項目が見つかりませんでした。</p>
<% end %>